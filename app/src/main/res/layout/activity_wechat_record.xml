<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xiaobao.good.MainActivity">

    <Button
        android:id="@+id/bt_back"
        android:layout_width="@dimen/img_back_width"
        android:layout_height="@dimen/img_back_height"
        android:layout_marginTop="6dp"
        android:background="@mipmap/back" />


    <Button
        android:id="@+id/bt_add_img"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:background="@mipmap/picture_icon" />


    <Button
        android:id="@+id/bt_commit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/record_btn_selector"
        android:text="提交"
        android:textSize="@dimen/text_size_18" />

    <ImageView
        android:id="@+id/result_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg"
        android:scaleType="centerInside" />

    <ListView
        android:id="@+id/lv_chats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_commit"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="70dp"
        android:divider="#A9A9A9"
        android:dividerHeight="1dp" />
</RelativeLayout>