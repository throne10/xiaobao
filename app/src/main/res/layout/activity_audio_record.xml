<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/bg_btn_back" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp">

        <RelativeLayout
            android:id="@+id/rl_client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp">

            <TextView
                android:id="@+id/tv_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户"
                android:textColor="@color/color_text_white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bt_name"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@id/tv_client"
                android:background="@drawable/button_empty"
                android:gravity="center_vertical"
                android:layout_centerInParent="true"
                android:text="新闻"
                android:textColor="@color/color_text_white"
                android:textSize="20sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rl_client">

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前位置"
                android:textColor="@color/color_text_white"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_location"
                android:background="@drawable/button_empty"
                android:gravity="center_vertical"
                android:text="新闻"
                android:textColor="@color/color_text_white"
                android:textSize="20sp">

                <TextView
                    android:id="@+id/tv_location_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="当前位置当前位置当前位置当前位置当前位置当前位置当前位置当前位置当前位置"
                    android:paddingRight="30dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/color_text_white"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/location" />

            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>


    <Chronometer
        android:id="@+id/record_audio_chronometer_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/record_audio_iv_close"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:textColor="@color/color_text_white"
        android:textSize="50sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_pause_play"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="暂停"
            android:textColor="@color/color_text_white" />


        <Button
            android:id="@+id/bt_stop_record"
            android:layout_width="0dp"

            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:background="@drawable/button_blue"
            android:text="停止录音"
            android:textColor="@color/color_text_white" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_play"
            android:layout_width="0dp"

            android:layout_height="wrap_content"

            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="播放"
            android:textColor="@color/color_text_white" />


        <Button
            android:id="@+id/bt_upload"
            android:layout_width="0dp"

            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:background="@drawable/button_blue"
            android:text="提交"
            android:textColor="@color/color_text_white" />

    </LinearLayout>


</LinearLayout>